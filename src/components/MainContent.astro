---
import MainButton from "./MainButton.astro";
import Image from "astro/components/Image.astro";
import asciiBunny from "../../images/Conejo-Ascii.png";
import flower from "../../images/flower.png";
import crispy from "../../images/crispy.png";
---

<main>
	<div class="title">
		<h3>WELCOME TO MY</h3>
		<h1>Portfolio</h1>
		<div>
			<MainButton text="ABOUT ME" />
			<MainButton text="MY WORK" />
		</div>
	</div>
	<div class="front-images">
		<Image
			class="ascii-bunny"
			src={asciiBunny}
			alt="Conejo en arte Ascii"
		/>
		<Image class="flower" src={flower} alt="flower" />
		<Image class="crispy" src={crispy} alt="cat" />
	</div>
</main>
<style>
	main {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		margin: 81px 85px 16px 85px;
		height: 50vh;
	}
	.title {
		width: 50%;
		text-align: center;
	}
	.title h3 {
		font-weight: 400;
		font-style: normal;
		size: 26px;
		text-align: left;
		padding-left: 4vw;
	}
	.title h1 {
		font-family: "Ballet Variable", cursive;
		font-weight: 400;
		font-size: 180px;
		margin: 16.1px 0px;
	}
	.front-images {
		position: relative;
		width: 50%;
		text-align: center;
	}
	.ascii-bunny {
		width: 70%;
	}
	.flower {
		position: absolute;
		width: 30%;
		height: auto;
		top: 0%;
		left: 15%;
	}
	.crispy {
		position: absolute;
		width: 30%;
		height: auto;
		bottom: -10%;
		right: 10%;
	}
</style>
