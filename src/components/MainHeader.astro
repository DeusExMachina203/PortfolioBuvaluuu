---
const { sections } = Astro.props;
---

<header>
	<img
		class="main-logo"
		src="../../images/logo_buvaluuu.png"
		alt="Logo de la marca Buvaluuu"
	/>
	<ul class="sections">
		{sections.map((section: string) => <li>{section}</li>)}
	</ul>
</header>

<style>
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom-style: solid;
		border-bottom-color: black;
		border-bottom-width: 2px;
		padding: 3vh 3vw 2vh 20px;
		margin: 3vh 3vw 2vh 3vw;
		height: 3vh;
	}
	.sections {
		width: 30%;
		list-style: none;
		display: flex;
		justify-content: space-around;
		align-items: center;
	}
	.main-logo {
		width: 50px;
		height: 50px;
		padding-left: 1vw;
	}
</style>
