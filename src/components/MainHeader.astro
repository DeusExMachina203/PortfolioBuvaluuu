---
const { sections } = Astro.props;
---

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<title>Astro</title>
</head>
<header>
	<img
		class="main-logo"
		src="../../images/logo_buvaluuu.png"
		alt="Logo de la marca Buvaluuu"
	/>
	<ul class="sections">
		{
			sections.map((section: string) => (
				<a
					href={
						section === "HOME"
							? "./"
							: `./${section.toLowerCase()}`
					}
				>
					<li class="section">{section}</li>
				</a>
			))
		}
	</ul>
</header>

<style>
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom-style: solid;
		border-bottom-color: black;
		border-bottom-width: 2px;
		padding: 4em 3vw 27px 20px;
		margin: 3vh 3vw 2vh 3vw;
		height: 3vh;
	}
	.sections {
		width: 30%;
		list-style: none;
		display: flex;
		justify-content: space-around;
		align-items: center;
		margin-bottom: 40px;
	}
	.sections a {
		text-decoration: none;
		color: inherit;
	}
	.section {
		border-bottom: transparent solid 2px;
		transition: 0.5s;
	}
	.section:hover {
		border-bottom: black solid 2px;
	}
	.main-logo {
		width: 50px;
		height: 50px;
		margin-left: 10px;
		margin-bottom: 30px;
	}
</style>
