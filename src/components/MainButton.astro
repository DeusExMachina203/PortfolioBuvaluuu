---
const { text } = Astro.props;
---

<button>
	{text}
</button>

<style>
	button {
		font-weight: 500;
		font-size: 20px;
		padding: 5px 20px;
		width: 180px;
		border-radius: 34px;
		background: linear-gradient(
			90deg,
			#000 0%,
			#ffffff 50%,
			rgba(255, 255, 255, 0) 100%
		);
		background-size: 200%;
		background-position: right;
		transition: 0.5s;
	}
	button:hover {
		background-position: left;
		color: white;
	}
</style>
